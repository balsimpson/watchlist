{
	"manifest_version": 2,
	"name": "Watchlist",
	"description": "Save Movies to your Watchlist",
	"version": "1.5",
	"permissions": [
		"storage",
		"tabs",
		"https://*/",
		"contextMenus",
		"identity"
	],
	"icons": {
		"16": "watchlist_16.png",
		"48": "watchlist_48.png",
		"128": "watchlist_128.png"
	},
	"browser_action": {
		"default_action": "",
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"content.js"
			]
		}
	],
	"background": {
		"persistent": true,
		"scripts": [
			"background.js",
			"firebase-app.js",
			"firebase-firestore.js"
		]
	},
	"content_security_policy": "script-src 'self' https://use.fontawesome.com https://fontawesome.com https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com; object-src 'self'",
	"oauth2": {
	  "client_id": "287335213989-skkpfn83eodsue8klk161d2hlr8h06le.apps.googleusercontent.com",
	  "scopes": [
		"https://www.googleapis.com/auth/userinfo.email",
		"https://www.googleapis.com/auth/userinfo.profile"
	  ]
	},
	"key": "-----BEGIN PUBLIC KEY----------END PUBLIC KEY-----"
}